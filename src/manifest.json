{
  "name": "__MSG_extension_name__",
  "version": "0.6.0",
  "description": "__MSG_extension_description__",
  "manifest_version": 2,
  "minimum_chrome_version": "22",
  "offline_enabled": false,
  "default_locale": "fr",
  "background": {
    "scripts": [
      "vendor/lodash/dist/lodash.min.js",
      "vendor/machina/lib/machina.min.js",
      "vendor/js-md5/js/md5.min.js",
      "lib/radio.js",
      "lib/broadcast.js",
      "lib/preferences.js",
      "lib/lastfm.js",
      "background/controller.js",
      "lastfm/controller.js",
      "background/bootstrap.js"
    ],
    "persistent": true
  },
  "permissions": [
    "background",
    "idle",
    "alarms",
    "https://ws.audioscrobbler.com/",
    "http://*.fipradio.fr/",
    "http://mp3.live.tv-radio.com/"
  ],
  "browser_action": {
    "default_icon": "resources/fip.png",
    "default_title": "__MSG_extension_name__"
  },
  "icons": {
    "16": "resources/fip.png",
    "48": "resources/fip.png",
    "128": "resources/fip.png"
  }
}
